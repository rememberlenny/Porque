<h3>
  <%= @scenario.name %>
</h3>
<u>Description</u>
<p>
  <%= @scenario.description %>
</p>

<div class="panel">
  <p>
    <strong>Unique ID: </strong><%= @question.id %> <br>
    <strong>Last updated:</strong> <%= @question.updated_at %> <br>
    <strong>Created:</strong> <%= @question.created_at %> <br>
  </p>
  <p>
    <strong>Prompt</strong><br>
    <%= @question.questionprompt %>
  </p>
  <strong>Answers</strong>
  <ol>
    <% @question.answers.each do |answer| %>
      <li>
        <%= answer.answeroption %>
      </li>
    <% end %>
  </ol>
</div>


<%= link_to "All questions", scenario_questions_path %>
