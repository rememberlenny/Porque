<h3>
  <%= @scenario.name %>
</h3>
<u>Description</u>
<p>
  <%= @scenario.description %>
</p>

<div class="panel">
  <p>
    <strong>Unique ID: </strong><%= @question.id %> <br>
    <strong>Last updated:</strong> <%= @question.updated_at %> <br>
    <strong>Created:</strong> <%= @question.created_at %> <br>
  </p>
  <p>
    <strong>Prompt</strong><br>
    <%= @question.questionprompt %>
  </p>
  <strong>Answers</strong>
  <ul class="large-block-grid-2">
    <% @question.answers.each do |answer| %>
      <li>
        <%= answer.answeroption %>
        <br>
        <br>
        Response:
        <%= answer.response %>
      </li>
    <% end %>
  </ul>
  <u>
   <%= link_to 'Edit', {:controller=>"questions", :action=>"edit", :scenario_id=>@scenario.id, :id=>@question.id }, :class=>"button small" %>
  </u>
</div>


<%= link_to "All questions", scenario_questions_path(:scenario_id=>@question.scenario_id), :class=>"button small secondary" %>
